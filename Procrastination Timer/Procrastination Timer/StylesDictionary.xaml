<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:Procrastination_Timer">

  <!-- Font Sizes -->
  <x:Double x:Key="SmallFontSize">16</x:Double>
  <x:Double x:Key="MediumFontSize">24</x:Double>
  <x:Double x:Key="LargeFontSize">32</x:Double>

  <!-- Transparencies -->
  <SolidColorBrush x:Key="TransparentBrush"
                   Color="Transparent" />
  <SolidColorBrush x:Key="TransparentGreyBrush"
                   Color="#80212121" />
  <SolidColorBrush x:Key="TransparentBlue40Brush"
                   Color="#665c7598" />
  <SolidColorBrush x:Key="TransparentBlue20Brush"
                   Color="#335c7598" />

  <!-- Greys and Whites -->
  <SolidColorBrush x:Key="WhiteBrush"
                   Color="#FFFFFF" />
  <SolidColorBrush x:Key="DarkGreyBrush"
                   Color="#424242" />
  <SolidColorBrush x:Key="LightGreyBrush"
                   Color="#949494" />
  <SolidColorBrush x:Key="VeryLightGreyBrush"
                   Color="#dadadb" />

  <!-- Blues -->
  <SolidColorBrush x:Key="BlueBrush"
                   Color="#5c7598" />
  <SolidColorBrush x:Key="BlueHoverBrush"
                   Color="#526988" />
  <SolidColorBrush x:Key="BluePressedBrush"
                   Color="#495D79" />
  <SolidColorBrush x:Key="LightBlueBrush"
                   Color="#abb7c8" />
</ResourceDictionary>
